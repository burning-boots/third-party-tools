<?xml version="1.0"?>

<!--       Burning Boots        -->
<!-- Please use a tab size of 2 -->

<!DOCTYPE project>
<project name="burning-boots-tools">
	<description>
A set of tools needed by Burning Boots builds.
	</description>

	<!-- Store this base dir -->
	<dirname property="burning-boots-tools.basedir" file="${ant.file.burning-boots-tools}"/>

	<!-- Pull in the various tools -->
	<import file="${burning-boots-tools.basedir}${file.separator}apache${file.separator}ant${file.separator}ant-contrib${file.separator}tool.xml"/>
	<import file="${burning-boots-tools.basedir}${file.separator}css-compressor${file.separator}tool.xml"/>
	<import file="${burning-boots-tools.basedir}${file.separator}csslint${file.separator}tool.xml"/>
	<import file="${burning-boots-tools.basedir}${file.separator}htmlcompressor${file.separator}tool.xml"/>
	<import file="${burning-boots-tools.basedir}${file.separator}jsdoc${file.separator}tool.xml"/>
	<import file="${burning-boots-tools.basedir}${file.separator}jshint${file.separator}tool.xml"/>
	<import file="${burning-boots-tools.basedir}${file.separator}jslint${file.separator}tool.xml"/>
	<import file="${burning-boots-tools.basedir}${file.separator}rhino${file.separator}tool.xml"/>
	<import file="${burning-boots-tools.basedir}${file.separator}yui${file.separator}compressor${file.separator}tool.xml"/>
</project>
